@model VideoCallRequest
@{
    ViewBag.Title = "CLientDetails";
}

<h2>Video Conference with Solicitor/Lawyer</h2>
<hr />
<div class="panel panel-primary">
    <div class="panel-heading">
        <h4 style="margin:0px !important">Your slot details:</h4>
    </div>
    <div class="panel-body" style="font-size:18px; font-weight:bold !important">Date: @Model.Timeslot.Value.ToString("dd/MM/yyyy") <br />Time: @Model.Timeslot.Value.ToShortTimeString()</div>
</div>
<h4>If you are happy with this slot. Please fill in the details below to complete the request:</h4>

            @using (Html.BeginForm("ClientDetailsUpdate", "BookVideoConference", FormMethod.Post))
            {

                <div class="form-group">
                    @Html.HiddenFor(m => m.Timeslot)
                </div>
                <div class="form-group">
                    <label for="Forename">Forename</label>
                    @Html.TextBoxFor(m => m.Forename, new { @class = "form-control", placeholder = "Enter Forename", Required = "Required" })
                </div>
                <div class="form-group">
                    <label for="Surname">Surname</label>
                    @Html.TextBoxFor(m => m.Surname, new { @class = "form-control", placeholder = "Enter Surname", Required = "Required" })
                </div>
                <div class="form-group">
                    <label for="Telephone">Telephone/Mobile</label>
                    @Html.TextBoxFor(m => m.Telephone, new { @class = "form-control", placeholder = "Enter Telephone/Mobile", Required = "Required" })
                </div>
                <div class="form-group">
                    <label for="ZoommailId">Zoom Chat Email ID</label>
                    @Html.TextBoxFor(m => m.ZoommailId, new { @class = "form-control", placeholder = "Enter ZoomChat Email ID", Required = "Required" })
                </div>
                <div class="form-group">
                    @*@Html.DropDownListFor(m => m.Department, null, "Select the area of law", new { @class = "form-control", Required = "Required" })*@
                    @Html.HiddenFor(m => m.Department)
                </div>
                <div class="form-group">
                    <label for="Reason">Brief summary for the call</label><br />
                    @Html.TextAreaFor(m => m.Reason, new { @style = "width:100%", rows = "5", autocomplete = "off", Required = "Required" })
                </div>
                <div style="width:100%;">
                    <input type="submit" value="Submit Request" class="btn btn-primary" />
                </div>

            }
